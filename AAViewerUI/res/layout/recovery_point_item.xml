<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:paddingLeft="28dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recoveryPointStateImageView"
                android:layout_gravity="center"
                android:src="@drawable/gray"
                android:layout_margin="10dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/recoveryPointNameTextView"
                android:layout_gravity="center|left"
                android:singleLine="true"
                android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                android:layout_weight="0.5"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/recoveryPointTimeTextView" android:layout_gravity="center_vertical" android:singleLine="true"
                android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/recoveryPointTypeTextView"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.0"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:singleLine="true" android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>