<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agents of"
                android:id="@+id/hostNameTextView"
                android:layout_gravity="center|left" android:layout_margin="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="agent"
                android:id="@+id/textViewAgentsCoreName" android:layout_gravity="center"
                android:layout_marginTop="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="5dp"
                android:textStyle="bold"/>
    </LinearLayout>
    <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/agentListView" android:layout_gravity="right|center_vertical"/>
</LinearLayout>